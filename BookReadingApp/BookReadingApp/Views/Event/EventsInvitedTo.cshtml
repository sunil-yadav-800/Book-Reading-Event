@model IEnumerable<Event>
<div class="container">
    <h6>Events where <b>@User.Identity.Name</b> is invited to</h6>
    <div class="row pt-2">
        <table class="table-bordered table-striped" style="width:30%">
            <thead>
                <tr>
                    <th>Title of Event</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var eve in Model)
                {
                    <tr>
                        <td><a asp-controller="Event" asp-action="EventsInvitedToViewEvent" asp-route-id="@eve.Id">@eve.Title</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>